---
import { Image } from 'astro:assets';
import cn from 'classnames';
import profilePicture from '../images/marco-montalbano.jpg';
import type { Props as LayoutProps } from '../layouts/Layout.astro';

interface Props {
  hero?: LayoutProps['hero'];
}

const { hero } = Astro.props;

const TitleElement = hero == null ? 'h1' : 'div';
---

<header
  class={cn('top-0 w-full', {
    'sticky top-0 text-white backdrop-blur-md': hero != null,
  })}
>
  <div class="container">
    <nav class="flex items-center gap-4 h-20">
      <div class="grow">
        <a href="/">
          <TitleElement class="font-title text-xl md:text-3xl flex items-center gap-3 md:gap-4">
            <Image
              class="rounded-full w-6 h-6 md:w-8 md:h-8"
              alt="Marco Montalbano"
              src={profilePicture}
              width={512}
              height={512}
            />
            Marco Montalbano
          </TitleElement>
        </a>
      </div>
      <div class="flex md:text-lg gap-6 md:gap-8 items-center">
        <a href="https://github.com/marcomontalbano">GitHub</a>
        <a href="https://cv.marcomontalbano.com">CV</a>
      </div>
    </nav>
  </div>
</header>
