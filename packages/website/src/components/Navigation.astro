---
import cn from 'classnames'
import type { Props as LayoutProps } from '../layouts/Layout.astro'

interface Props {
  hero?: LayoutProps['hero']
}

const { hero } = Astro.props;
---

<header class={
  cn(
    'top-0 w-full',
    { 
      'sticky top-0 text-white backdrop-blur-md': hero != null
    }
  )
}>
  <div class="container">
    <nav class="flex items-center gap-4 h-20">
      <div class="grow">
        <a href="/" class="font-title text-xl md:text-3xl">Marco Montalbano</a>
      </div>
      <div class="flex md:text-lg gap-6 md:gap-8">
        <a href="https://github.com/marcomontalbano">GitHub</a>
        <a href="https://cv.marcomontalbano.com">CV</a>
      </div>
    </nav>
  </div>
</header>
