---
interface Props {
  title: string;
}

const mainTitle = 'Marco Montalbano'
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{`${title != mainTitle ? `${title} - ` : ''}${mainTitle}`}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;700&amp;family=Spinnaker&amp;display=swap" rel="stylesheet">
  </head>
  <body>
    <div class="container">
      <header class="flex items-center gap-8 h-16">
        <div class="grow">
          <a href="/" class="font-title text-3xl p-2">Marco Montalbano</a>
        </div>
        <div class="flex text-lg gap-8">
          <a href="https://github.com/marcomontalbano" class="p-2">GitHub</a>
          <a href="https://cv.marcomontalbano.com" class="p-2">CV</a>
        </div>
      </header>
      <slot />
    </div>
  </body>
</html>

<style is:global>
  html {
    @apply text-brand-dark mb-8;
  }
  code {
    @apply text-sm;
  }
</style>
