{
  "name": "marcomontalbano-github-io",
  "private": true,
  "license": "MIT",
  "description": "My website",
  "scripts": {
    "clean": "rm -rf node_modules/ */*/node_modules */*/dist */*/tsconfig*.tsbuildinfo */*/.cache */website/public",
    "postinstall": "run-s lerna:install",
    "watch": "npx chokidar-cli \"packages/component-library/src/**/*.{j,t}s{,x}\" -c \"run-s prestart\"",
    "prestart": "run-s build:dist lerna:fixDependencies",
    "start": "dotenv lerna run start --parallel",
    "test": "lerna run test",
    "lint": "lerna run lint",
    "build:dist": "lerna run build:dist --parallel",
    "lerna:fixDependencies": "node lernaCopy.js",
    "lerna:version": "lerna version",
    "lerna:install": "lerna exec npm install --parallel",
    "lerna:update": "lerna exec npm update --stream",
    "website:update": "lerna exec \"npm install @marcomontalbano/component-library@latest --save-exact\" --scope @marcomontalbano/website",
    "website:build": "lerna run build --scope @marcomontalbano/website",
    "website:serve": "lerna run serve --scope @marcomontalbano/website"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcomontalbano/marcomontalbano.github.io.git"
  },
  "author": "Marco Montalbano <me@marcomontalbano.com>",
  "bugs": {
    "url": "https://github.com/marcomontalbano/marcomontalbano.github.io/issues"
  },
  "homepage": "https://marcomontalbano.github.io/marcomontalbano.github.io",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.{j,t}s{,x}": [
      "prettier \"**/*.{j,t}s{,x}\" --write",
      "npm run lint -- -- "
    ]
  },
  "devDependencies": {
    "fs-extra": "~9.0.0",
    "husky": "~4.2.3",
    "lerna": "~3.20.2",
    "lerna-changelog": "~1.0.1",
    "lint-staged": "~10.0.9",
    "npm-run-all": "~4.1.5",
    "prettier": "2.0.2"
  },
  "engines": {
    "node": ">= 10.16.x <= 12.x",
    "npm": ">= 6.9.x < 7.x"
  },
  "dependencies": {
    "dotenv": "~8.2.0"
  }
}
