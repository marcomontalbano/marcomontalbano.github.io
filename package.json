{
  "name": "marcomontalbano-github-io",
  "private": true,
  "license": "MIT",
  "description": "My website",
  "scripts": {
    "clean": "rm -rf node_modules/ */*/node_modules */*/dist */*/tsconfig*.tsbuildinfo",
    "postinstall": "run-s lerna:install build:dist",
    "prestart": "run-s build:dist",
    "start": "dotenv lerna run start --parallel",
    "build:dist": "dotenv lerna run build:dist --parallel",
    "postbuild:dist": "npm run lerna:fixDependencies",
    "test": "dotenv lerna run test",
    "lint": "dotenv lerna run lint",
    "watch": "npx chokidar-cli \"packages/component-library/src/**/*.{j,t}s{,x}\" -c \"npm run build:dist\"",
    "lerna:fixDependencies": "node lernaCopy.js",
    "lerna:version": "lerna version",
    "lerna:install": "lerna exec npm install --parallel",
    "lerna:update": "lerna exec npm update --stream"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcomontalbano/marcomontalbano.github.io.git"
  },
  "author": "Marco Montalbano <me@marcomontalbano.com>",
  "bugs": {
    "url": "https://github.com/marcomontalbano/marcomontalbano.github.io/issues"
  },
  "homepage": "https://marcomontalbano.github.io/marcomontalbano.github.io",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier \"**/*.{j,t}s{,x}\" --write"
    ]
  },
  "devDependencies": {
    "fs-extra": "~9.0.0",
    "husky": "~4.2.3",
    "lerna": "~3.20.2",
    "lint-staged": "~10.0.9",
    "npm-run-all": "~4.1.5",
    "prettier": "2.0.2"
  },
  "engines": {
    "node": ">= 10.16.x <= 12.x",
    "npm": ">= 6.9.x < 7.x"
  },
  "dependencies": {
    "dotenv": "~8.2.0"
  }
}
